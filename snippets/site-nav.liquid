<nav class="site-menu site-menu--main hide-for-medium-down" role="navigation">
  <ul class="main-nav">
      {% for link in linklists.main-menu.links %}
      {% assign child_list_handle = link.title | handle %}
      {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
      <li>
        <a class="top-level" href="{{ link.url }}">
          <span>{{ link.title }}</span>
          {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
            <span class="icon-chevron"></span>
          {% endif %}
        </a>
        <div class="dropdown">
          {% for child_link in linklists[child_list_handle].links %}
            {{ child_link.title | link_to: child_link.url }}
          {% endfor %}
        </div>
      </li>
      {% else %}
      <li>
        <a class="top-level" href="{{ link.url }}">
          {{ link.title }}
        </a>
      </li>
      {% endif %}
      {% endfor %}
    </ul>
</nav>
<div class="pipe"></div>
<nav class="site-menu site-menu--user hide-for-medium-down" role="navigation">
  <ul class="main-nav">
    <li>
      <a class="top-level" href="/account/register/">Sign Up</a>
    </li>
    <li>
      <a class="top-level" href="/account/login/">Log In</a>
    </li>
  </ul>
</nav>
